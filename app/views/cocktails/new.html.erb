<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset">
      <h1>Create a new cocktail</h1>

      <%= simple_form_for(@cocktail) do |f| %>
      <div class="form-inputs">
        <%= f.input :name %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
      <% end %>

      <%= link_to "Back", cocktails_path(@cocktail)%>

    </div>
  </div>
</div>
